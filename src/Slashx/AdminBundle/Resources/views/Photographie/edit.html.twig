{% extends 'SlashxAdminBundle::layout.html.twig' %}

{% block block_title %}
GESTION PHOTOGRAPHIE 
{% endblock %}

{% block sub_main %}
    <h1>Photographie : Modification</h1>

    <form action="{{ path('photographie_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
          
   <div class="element" style='display: none'>
	        {{ form_label(edit_form.album) }}
	        {{ form_errors(edit_form.album) }}
	        {{ form_widget(edit_form.album) }}
	    </div>
	    
	       
	     <div class='left_area'>
	    	 <div class="element" >
		        {{ form_label(edit_form.file,'Photo') }}
		        {{ form_errors(edit_form.file) }}
		        {{ form_widget(edit_form.file,{ 'attr': {'class': 'text'} }) }}
	    	</div>
	    </div>
	    
	    <div class='right_area'>
	    	<div class="element">
		       	{% if entity.photo %}
	    			<img src="{{ asset(entity.getWebPath()) }}" width="60px"/>
				{% else %}
				    Pas d'image !
				{% endif %}
	    	</div>
	    </div>
	    
	   <div class='clear_area'></div>
	   
	    	
	    	
	    	 <div class="element" >
		        {{ form_label(edit_form.commentaire,'commentaire') }}
		        {{ form_errors(edit_form.commentaire) }}
		        {{ form_widget(edit_form.commentaire,{ 'attr': {'class': 'TinyMCE'} }) }}
	    	</div>

	    	<div class="element" >
		        {{ form_label(edit_form.ordre,'Ordre') }}
		        {{ form_errors(edit_form.ordre) }}
		        {{ form_widget(edit_form.ordre,{ 'attr': {'class': 'text'} }) }}
	    	</div>
	    
	    
{{ form_widget(edit_form) }}

