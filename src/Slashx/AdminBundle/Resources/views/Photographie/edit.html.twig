        </a>
        </p>
    </form>

        <form action="{{ path('photographie_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    
{% endblock %}
