{% extends 'SlashxAdminBundle::layout.html.twig' %}

{% block block_title %}
GESTION DES ARTICLES
{% endblock %}

{% block sub_main -%}
    <h1>Article list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                
                <td>
                <ul>
               
                    <li>
                        <a href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

         <p class="records_list">
        
            <a class='button add'  href="{{ path('article_new') }}">
         Ajouter un article
            </a>
            </p>
      
    {% endblock %}
