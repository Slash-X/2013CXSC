{% extends 'SlashxAdminBundle::layout.html.twig' %}

{% block block_title %}
GESTION DES PUBLICATIONS
{% endblock %}

{% block sub_main %}
    <h1>Nom du papillon : " {{ papillon.nom }} "</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Auteur</th>
                <th>Date</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.auteur }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                
                <td>
                <ul>
                    <li>
                        <a href="{{ path('publication_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       <p class="records_list">
            <a class="button add" class="button" href="{{ path('publication_new', { 'id': papillon.id }) }}">
                Ajouter une nouvelle publication
            </a>
               <a class='button cancel' href="{{ path('papillon', { 'id':papillon.id }) }}">
