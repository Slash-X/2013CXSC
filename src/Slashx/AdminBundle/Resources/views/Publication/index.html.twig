{% extends 'SlashxAdminBundle::layout.html.twig' %}

{% block block_title %}
GESTION DES PUBLICATIONS
{% endblock %}

{% block sub_main %}
    <h1>Nom du papillon : " {{ papillon.nom }} "</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Reference</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.auteur }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.reference }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('publication_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('publication_new', { 'id': papillon.id }) }}">
                Create a new entry
            </a>
        </li>
    </ul>
     	<p>&nbsp;</p>
    {% endblock %}
